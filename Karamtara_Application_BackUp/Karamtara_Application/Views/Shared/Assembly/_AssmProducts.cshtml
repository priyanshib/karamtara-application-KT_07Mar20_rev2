                <td><input type="text" value="@item.SrNo" readonly="readonly" class="prods" name="srno" /></td>
                <td><input type="text" value="@item.CatalogueNo" readonly="readonly" class="prods" name="editCatNo" /></td>
                <td>
                    <span class="tooltipHover c-pointer">
