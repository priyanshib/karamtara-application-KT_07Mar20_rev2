@model Karamtara_Application.Models.CreateBOMModel

<div class="Catgdetails tableBlock" id="divProdEdit">
    <div class="row">
        <div class="col-sm-12 mb-3 mt-3">
            <button class="submitBomBtn downloadExcel" type="button" id="excelDownload" onclick='location.href="@Url.Action("DownloadExcel","BOMRevision",new { bomId=Model.BomId, revNo=Model.RevisionNo, enqId=Model.EnquiryId})"'> Download Excel <img src="~/Assets/images/downloadExcel.svg" width="25px" class="ml-1" /></button>
        </div>
        <div class="col-sm-12">
            @using (Html.BeginForm("DownloadExcel", "BOMRevision", FormMethod.Post, new { @id = "excelDownloadForm" }))
            {
                <table class="table prodDetails exceldowntable" id="prodTbl2">

                    <tr>
                        <th class="srNo">Sr.No</th>
                        <th class="catNo">Catalogue No</th>
                        <th class="catNo">Code</th>
                        <th class="productNm">Item Name</th>
                        <th class="rawMater">Raw Material</th>
                        <th class="prodNo">Size</th>
                        <th class="prodNo">Quantity</th>
                        <th class="prodNo">Unit Gross Weight</th>
                        <th class="prodNo">Unit Net Weight</th>
                        <th class="prodNo">Type</th>
                    </tr>

                    @{
                        int foreachCount = 1;
                        int charCount = 97;
                        int capCount = 65;
                    }
                    @foreach (var item in Model.MasterList)
                    {
                        if (item.IsRelated)
                        {
                            <tr>
                                <td><input type="text" value="@foreachCount" readonly="readonly" class="prods bold" name="srno" /></td>
                                <td><input type="text" value="@item.CatalogueNo" readonly="readonly" class="prods bold" name="editCatNo" /></td>
                                <td><input type="text" value="@item.Code" readonly="readonly" class="prods bold" name="editCode" /></td>
                                <td><input type="text" value="@item.Name" readonly="readonly" class="prods bold" name="editProdName" /></td>
                                <td><input type="text" value="@item.Material" readonly="readonly" class="prods bold" name="editRM"></td>
                                <td><input type="text" value="@item.Size" readonly="readonly" class="prods bold" name="Size"></td>
                                <td><input type="text" value="@item.Quantity" readonly="readonly" class="prods bold" name="editQty" /></td>
                                <td><input type="text" value="@item.UnitGrWt" readonly="readonly" class="prods bold" name="editUnitGr" /></td>
                                <td><input type="text" value="@item.UnitNetWt" readonly="readonly" class="prods bold" name="editUnitNet" /></td>
                                <td><input type="text" value="@item.Type" readonly="readonly" class="prods bold" name="editQty" /></td>
                            </tr>
                            foreachCount++;
                            capCount = 65;
                            charCount = 97;
                        }
                        else if (item.Type == 2)
                        {
                            <tr>
                                <td><input type="text" value="@(Convert.ToString((char)capCount) + " )")" readonly="readonly" class="prods boldGray" name="srno" /></td>
                                <td><input type="text" value="@item.CatalogueNo" readonly="readonly" class="prods boldGray" name="editCatNo" /></td>
                                <td><input type="text" value="@item.Code" readonly="readonly" class="prods boldGray" name="editCode" /></td>
                                <td><input type="text" value="@item.Name" readonly="readonly" class="prods boldGray" name="editProdName" /></td>
                                <td><input type="text" value="@item.Material" readonly="readonly" class="prods boldGray" name="editRM"></td>
                                <td><input type="text" value="@item.Size" readonly="readonly" class="prods boldGray" name="Size"></td>
                                <td><input type="text" value="@item.Quantity" readonly="readonly" class="prods boldGray" name="editQty" /></td>
                                <td><input type="text" value="@item.UnitGrWt" readonly="readonly" class="prods boldGray" name="editUnitGr" /></td>
                                <td><input type="text" value="@item.UnitNetWt" readonly="readonly" class="prods boldGray" name="editUnitNet" /></td>
                                <td><input type="text" value="@item.Type" readonly="readonly" class="prods boldGray" name="editQty" /></td>
                            </tr>
                            capCount++;
                            charCount = 97;
                        }
                        else if (item.Type == 3)
                        {
                            <tr>
                                <td><input type="text" value="@(Convert.ToString((char)charCount) + ".")" readonly="readonly" class="prods" name="srno" /></td>
                                <td><input type="text" value="@item.CatalogueNo" readonly="readonly" class="prods" name="editCatNo" /></td>
                                <td><input type="text" value="@item.Code" readonly="readonly" class="prods" name="editCode" /></td>
                                <td><input type="text" value="@item.Name" readonly="readonly" class="prods" name="editProdName" /></td>
                                <td><input type="text" value="@item.Material" readonly="readonly" class="prods" name="editRM"></td>
                                <td><input type="text" value="@item.Size" readonly="readonly" class="prods" name="Size"></td>
                                <td><input type="text" value="@item.Quantity" readonly="readonly" class="prods" name="editQty" /></td>
                                <td><input type="text" value="@item.UnitGrWt" readonly="readonly" class="prods" name="editUnitGr" /></td>
                                <td><input type="text" value="@item.UnitNetWt" readonly="readonly" class="prods" name="editUnitNet" /></td>
                                <td><input type="text" value="@item.Type" readonly="readonly" class="prods" name="editQty" /></td>
                            </tr>
                            charCount++;
                        }
                        else
                        {
                            <tr>
                                <td><input type="text" readonly="readonly" class="prods" name="srno" /></td>
                                <td><input type="text" value="@item.CatalogueNo" readonly="readonly" class="prods" name="editCatNo" /></td>
                                <td><input type="text" value="@item.Code" readonly="readonly" class="prods" name="editCode" /></td>
                                <td><input type="text" value="@item.Name" readonly="readonly" class="prods" name="editProdName" /></td>
                                <td><input type="text" value="@item.Material" readonly="readonly" class="prods" name="editRM"></td>
                                <td><input type="text" value="@item.Size" readonly="readonly" class="prods" name="Size"></td>
                                <td><input type="text" value="@item.Quantity" readonly="readonly" class="prods" name="editQty" /></td>
                                <td><input type="text" value="@item.UnitGrWt" readonly="readonly" class="prods" name="editUnitGr" /></td>
                                <td><input type="text" value="@item.UnitNetWt" readonly="readonly" class="prods" name="editUnitNet" /></td>
                                <td><input type="text" value="@item.Type" readonly="readonly" class="prods" name="editQty" /></td>
                            </tr>
                        }
                    }

                </table>
            }
        </div>
    </div>
</div>
